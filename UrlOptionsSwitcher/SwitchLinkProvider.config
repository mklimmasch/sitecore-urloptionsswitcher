<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>

    <!-- Make UrlOptions Switchable -->
    <linkManager>
      <providers>
        <add name="sitecore">
          <patch:attribute name="type">UrlOptionsSwitcher.SwitchableLinkProvider, UrlOptionsSwitcher</patch:attribute>
        </add>
      </providers>
    </linkManager>
    
  </sitecore>
</configuration>